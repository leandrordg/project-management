generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  userId       String   @unique
  firstName    String
  lastName     String?
  fullName     String?
  username     String?  @unique
  emailAddress String   @unique
  phoneNumber  String?
  avatar       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
